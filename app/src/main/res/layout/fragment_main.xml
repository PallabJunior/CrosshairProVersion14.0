<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:padding="@dimen/x10dp">

        <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="@dimen/x0dp"
                android:layout_height="@dimen/x50dp"
                android:layout_marginStart="@dimen/x8dp"
                android:layout_marginEnd="@dimen/x8dp"
                android:background="@color/green"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="@dimen/x1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <LinearLayout android:layout_width="@dimen/x0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:background="@color/black"
                          android:gravity="center"
                          android:padding="@dimen/x5dp">
                <TextView
                        android:id="@+id/classic_package"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="@string/classic"
                        android:textColor="@color/material_white"
                        android:textStyle="normal|bold"
                        app:autoSizeTextType="uniform"/>

            </LinearLayout>


            <Space android:layout_width="@dimen/x1dp" android:layout_height="match_parent"/>

            <LinearLayout android:layout_width="@dimen/x0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:background="@color/black"
                          android:gravity="center"
                          android:padding="@dimen/x5dp">

                <TextView
                        android:id="@+id/pro_package"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="@string/pro"
                        android:textColor="@color/material_red"
                        android:textStyle="normal|bold"
                        app:autoSizeTextType="uniform"/>

            </LinearLayout>

            <Space android:layout_width="@dimen/x1dp" android:layout_height="match_parent"/>

            <LinearLayout android:layout_width="@dimen/x0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="1"
                          android:background="@color/black"
                          android:gravity="center"
                          android:padding="@dimen/x5dp">

                <TextView
                        android:id="@+id/premium_package"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/black"
                        android:gravity="center"
                        android:text="@string/premium"
                        android:textColor="@color/golden_color"
                        android:textStyle="normal|bold"
                        app:autoSizeTextType="uniform"/>

            </LinearLayout>


        </LinearLayout>


        <FrameLayout android:id="@+id/frameLayout" android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginStart="@dimen/x8dp"
                     android:layout_marginEnd="@dimen/x8dp"
                     android:layout_marginBottom="@dimen/x60dp"
                     app:layout_constraintBottom_toBottomOf="parent"
                     app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent">

            <Button
                    android:id="@+id/buttonStop"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x90dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_red"
                    android:text="@string/stop"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14sp"
                    android:textStyle="bold"/>
            <Button
                    android:id="@+id/buttonStart"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x90dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/material_green"
                    android:text="@string/start"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/x14sp"
                    android:textStyle="bold"/>

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>