                    <ImageView
                            android:id="@+id/classic21"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/new_classic_1" />

                    <ImageView
                            android:id="@+id/classic22"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/new_classic_2" />

                    <ImageView
                            android:id="@+id/classic23"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/new_classic_3" />

                    <ImageView
                            android:id="@+id/classic24"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/new_classic_4" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
                android:id="@+id/flareBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/lightSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/x10dp"
                    android:switchPadding="@dimen/x10dp"
                    android:text="@string/turn_on_light"
                    android:textColor="@color/white"
                    android:theme="@style/SwitchTheme"
                    android:trackTint="@color/white" />


        </LinearLayout>


        <LinearLayout

                android:id="@+id/buttonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x20dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <Button
                    android:id="@+id/changeRed"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/primary" />

            <Button
                    android:id="@+id/changeWhite"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/white" />

            <Button
                    android:id="@+id/changeGreen"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/green" />

            <Button
                    android:id="@+id/changeYellow"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/yellow" />

            <Button
                    android:id="@+id/changePurple"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/purple" />

            <Button
                    android:id="@+id/changeBlue"
                    style="@android:style/Widget.Material.Button.Inset"
                    android:layout_width="@dimen/x0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="@color/blue" />


