                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair14" />

                    <ImageView
                            android:id="@+id/classic15"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair15" />

                    <ImageView
                            android:id="@+id/classic16"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair16" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/classic17"
                            android:layout_width="@dimen/x0dp"
