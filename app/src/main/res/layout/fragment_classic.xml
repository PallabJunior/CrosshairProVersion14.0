                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair5" />

                    <ImageView
                            android:id="@+id/classic6"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair6" />

                    <ImageView
                            android:id="@+id/classic7"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair7" />

                    <ImageView
                            android:id="@+id/classic8"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair8" />

                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:id="@+id/classic9"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
                            android:src="@drawable/crosshair9" />

                    <ImageView
                            android:id="@+id/classic10"
                            android:layout_width="@dimen/x0dp"
                            android:layout_height="@dimen/x50dp"
                            android:layout_marginTop="@dimen/x25dp"
                            android:layout_weight="1"
                            android:contentDescription="@string/crosshair"
