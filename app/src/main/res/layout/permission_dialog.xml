<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/permission_dialog_bg"
        android:orientation="vertical"
        android:padding="@dimen/x10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/alert_dialog_hint"
                android:textColor="@color/material_white"
                android:textStyle="normal|bold"
                app:autoSizeTextType="uniform" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x30dp"
            android:gravity="center">

        <Button
                android:id="@+id/permission_btn"
                android:layout_width="@dimen/x200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/android_button_bg_green"
                android:padding="@dimen/x12dp"
                android:text="@string/give_permission"
                android:textColor="@color/material_green"
                app:autoSizeTextType="uniform" />

    </LinearLayout>


</LinearLayout>